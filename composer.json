{
	"name": "oktopost/file-system",
    "description": "PHP FileSystem Wrapper",
	"type": "library",
	"license": "MIT",
	"homepage": "https://github.com/Oktopost/FileSystem",
	"authors":
	[
		{
			"name": "Alexey Puchkov",
			"email": "alexey@oktopost.com",
			"role": "Developer"
		}
	],
	"minimum-stability": "stable",
	"autoload":
	{
		"psr-4": 
		{
			"FileSystem\\": "Source/"
		}
	},
	"require": 
	{
		"unstable-cacao/traitor": "^1.0",
		"unstable-cacao/structura": "^2.1"
	},
	"require-dev":
	{
		"phpunit/phpunit": "^7.2",
		"php-coveralls/php-coveralls": "^2.1"
	},
    "scripts": 
	{
		"test": "./vendor/phpunit/phpunit/phpunit --dont-report-useless-tests",
		"test-cover": "./vendor/phpunit/phpunit/phpunit --dont-report-useless-tests --coverage-html ./build/cover"
    }
}
